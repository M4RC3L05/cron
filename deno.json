{
  "name": "@m4rc3l05/cron",
  "version": "1.0.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "dev:boot": "git config core.hooksPath ./.bin/git-hooks/ && deno task deps",
    "test": "TZ=UTC deno test",
    "deps:lock": "deno cache --lock=deno.lock --lock-write src/*.ts",
    "deps": "deno cache --reload --lock=deno.lock src/*.ts"
  },
  "publish": {
    "include": [
      "./src/*.ts",
      "LICENSE",
      "README.md",
      "deno.json"
    ],
    "exclude": [
      "./src/*_test.ts",
      "./src/test_deps.ts"
    ]
  }
}
